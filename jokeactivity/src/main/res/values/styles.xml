<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="jokeTextView" parent="TextAppearance.AppCompat.Headline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/default_margin</item>
    </style>

    <style name="answerTextView" parent="jokeTextView">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:visibility">invisible</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="emptyView" parent="jokeTextView">
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
